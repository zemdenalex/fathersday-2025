# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Admin Authentication
ADMIN_PASSWORD=changeme_secure_password

# Data Storage
DATA_DIR=./data

# Public Configuration (Frontend defaults, overridden by DB settings)
PUBLIC_TICKER_TEXT=ПАПА СПАСИБО
PUBLIC_SCROLL_SPEED=120
PUBLIC_TILE_BASE_VW=2
PUBLIC_GLYPH_SCALE=1.5
PUBLIC_FPS_TARGET=60

# Rotation Timing (milliseconds)
PUBLIC_ROTATE_IN_MS=800
PUBLIC_DWELL_MS=1500

# Image Processing
MAX_UPLOAD_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp

# Atlas Configuration
ATLAS_MAX_SIZE=4096
ATLAS_TILE_SIZE=128

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=change_this_to_random_string

# CORS (for development)
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=data/logs/app.log

# Production Settings (uncomment for production)
# NODE_ENV=production
# CORS_ORIGIN=https://yourdomain.com
# SESSION_SECRET=generate_with_openssl_rand_base64_32
